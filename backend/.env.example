# Copy to .env and fill in values

PORT=4000
NODE_ENV=development

# PostgreSQL (required)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DATABASE_NAME

# JWT (required; use a long random string in production)
JWT_SECRET=change-me-in-prod
JWT_EXPIRES_IN=3600

# Frontend URL (for CORS and reset links)
FRONTEND_ORIGIN=http://localhost:3000

# Optional: S3 for file uploads (if not set, uploads go to ./uploads)
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=

# Optional: email (verification + password reset). If not set, links are logged to console.
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=noreply@konecta.com
# EMAIL_SMTP_PASS=yourpassword
# EMAIL_FROM=noreply@konecta.com

ADMIN_APPROVAL_REQUIRED=true
BREAK_LIMIT_MINUTES=15
LUNCH_LIMIT_MINUTES=60
